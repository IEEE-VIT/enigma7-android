<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_back"
    android:padding="4dp">

    <include
        layout="@layout/enigma_title"
        android:id="@+id/questions_view"/>

    <include
        layout="@layout/progress_layout"/>

    <include
        layout="@layout/hints_layout"/>

    <include
        layout="@layout/questions_layout"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:background="@drawable/submit_button_back"
        android:textColor="@color/enigmaColor"
        android:text="@string/submit"
        android:textSize="18sp"
        android:id="@+id/submit_btn"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

</LinearLayout>