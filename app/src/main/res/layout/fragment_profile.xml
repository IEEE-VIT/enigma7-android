<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_back"
    android:orientation="vertical"
    tools:context=".view.home.ProfileFragment">

    <include
        android:id="@+id/title"
        layout="@layout/enigma_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp">

    </include>

    <TextView
        android:id="@+id/textView"
        style="@style/headerTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/ibm_plex_mono_regular"
        android:padding="2dp"
        android:text="@string/profile"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        style="@style/headerTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/ibm_plex_mono_semi_bold"
        android:padding="2dp"
        android:text="@string/user_name"
        android:textSize="21sp"
        app:lineHeight="21sp" />

    <TextView
        android:id="@+id/username"
        style="@style/simpleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/textView4"
        style="@style/headerTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/ibm_plex_mono_semi_bold"
        android:padding="2dp"
        android:text="@string/email_id"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/emailId"
        style="@style/simpleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"/>

    <LinearLayout
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView13"
            style="@style/headerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_mono_semi_bold"
            android:padding="2dp"
            android:text="@string/questions_solved"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/solved"
            style="@style/simpleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            style="@style/headerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_mono_semi_bold"
            android:padding="2dp"
            android:text="@string/rank"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/rank"
            style="@style/simpleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            style="@style/headerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_mono_semi_bold"
            android:padding="2dp"
            android:text="@string/score"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/score"
            style="@style/simpleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/signOutButton"
        style="@style/primaryButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/sign_out_button_backgrounf"
        android:clickable="true"
        android:fontFamily="@font/ibm_plex_mono_regular"
        android:paddingStart="9dp"
        android:paddingTop="7dp"
        android:paddingEnd="9dp"
        android:paddingBottom="7dp"
        android:text="@string/sign_out"
        android:textAllCaps="false"
        android:textSize="21sp"
        app:cornerRadius="0dp"
        app:strokeColor="@color/enigmaColor"
        app:strokeWidth="2dp" />
</LinearLayout>

</layout>
