<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/questionTextStyle"
            android:textStyle="bold"
            android:text="@string/q1"/>

        <TextView
            style="@style/questionTextStyle"
            android:fontFamily="@font/anaheim"
            android:text="@string/sample2"/>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:background="@drawable/image_story_back"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/use_hint_text"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:layout_marginTop="25dp"
            android:background="#4D182F24"
            style="@style/simpleTextStyle"/>
        
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_button_back"
            android:textColor="#1DB818"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:fontFamily="@font/anaheim"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>