<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            style="@style/questionTextStyle"
            android:text="@string/q1"
            android:id="@+id/question_id"
            android:textStyle="bold" />

        <TextView
            style="@style/questionTextStyle"
            android:id="@+id/question"
            android:text="@string/sample2" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:paddingVertical="5dp"
            android:id="@+id/question_image"
            android:background="@drawable/image_story_back" />

        <EditText
            android:id="@+id/answerBox"
            style="@style/simpleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorEnigmaBack"
            android:padding="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edit_text_cursor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_hint_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/submit_button_back"
                android:clickable="true"
                android:fontFamily="@font/ibm"
                android:padding="2dp"
                android:text="See Hint"
                android:textAlignment="center"
                android:textColor="@color/enigmaColor"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/get_hint_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/submit_button_back"
                android:clickable="true"
                android:fontFamily="@font/ibm"
                android:padding="2dp"
                android:text="@string/use_hint"
                android:textAlignment="center"
                android:textColor="@color/enigmaColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="29dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/submit_button_back"
                android:clickable="true"
                android:fontFamily="@font/ibm"
                android:padding="2dp"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textColor="@color/enigmaColor"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>