<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

        <include
            layout="@layout/enigma_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/enigma_character"/>
        
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <in.codeshuffle.typewriterview.TypeWriterView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/simpleTextStyle"
                    android:id="@+id/story_snippet"
                    android:text="@string/sample_story_snippet"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tap_to_continue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</RelativeLayout>