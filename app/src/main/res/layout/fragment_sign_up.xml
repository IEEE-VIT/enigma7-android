<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_back"
        tools:context=".view.auth.SignUpFragment">


        <ImageView
            android:id="@+id/zeroOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/zero_one"
            android:backgroundTint="@color/zeroOneTint"
            android:contentDescription="@string/_01"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/googleSignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/enigma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/vt323_regular"
            android:gravity="center_horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/Enigma"
            android:textColor="@color/enigmaColor"
            android:textSize="68sp"
            app:layout_constraintBottom_toTopOf="@+id/crypticText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/zeroOne" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/instaSignup"
            style="@style/primaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="51dp"
            android:fontFamily="@font/inconsolata_regular"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp"
            android:text="@string/Sign_up_insta"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/strokeColor"
            app:strokeWidth="@dimen/strokeWidth" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignup"
            style="@style/primaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/inconsolata_regular"
            android:paddingStart="26dp"
            android:paddingTop="12dp"
            android:paddingEnd="26dp"
            android:paddingBottom="12dp"
            android:text="@string/Sign_up_google"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/instaSignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/strokeColor"
            app:strokeWidth="@dimen/strokeWidth" />

        <TextView
            android:id="@+id/crypticText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_mono_regular"
            android:gravity="center_horizontal"
            android:text="@string/onlineCrypticHunt"
            android:textColor="@color/enigmaColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enigma" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>