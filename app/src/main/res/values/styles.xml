<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:backgroundTint">@color/bottomButton</item>
    </style>

    <style name="BottomButtonBack">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="FragmentBack">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>
    
    <style name="simpleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1DB818</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="headerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#26DF21</item>
        <item name="android:textSize">26sp</item>
        <item name="lineHeight">34sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="hintButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/hint_button_back</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="questionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="dialogTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDialogText</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

</resources>