<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:backgroundTint">@color/bottomButton</item>
    </style>

    <style name="BottomButtonBack">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="FragmentBack">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>
    
    <style name="simpleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1DB818</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="headerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#26DF21</item>
        <item name="android:textSize">26sp</item>
        <item name="lineHeight">34sp</item>
    </style>
    <style name="zeroOneText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#145E14</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/ibm_plex_mono_regular</item>
        <item name="android:alpha">0.25</item>
    </style>
    <style name="primaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/primaryRippleColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:radius">0dp</item>
    </style>
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="fontFamily">@font/ibm_plex_mono_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/enigmaColor</item>
        <item name="android:inputType">textVisiblePassword</item>

    </style>
</resources>